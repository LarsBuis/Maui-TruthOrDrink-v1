<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.TruthOrDrink.GamePage"
             Title="Truth or Drink">
    <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="CenterAndExpand">
        <Label x:Name="QuestionLabel"
               Text="Press Start to Begin"
               FontSize="24"
               HorizontalTextAlignment="Center" />

        <Button x:Name="TruthButton"
                Text="Answer Truth"
                IsVisible="False"
                Clicked="OnTruthClicked" />

        <Button x:Name="DrinkButton"
                Text="Drink"
                IsVisible="False"
                Clicked="OnDrinkClicked" />

        <Label x:Name="DrinkCounterLabel"
               Text="Drinks Taken: 0"
               FontSize="18"
               IsVisible="True"
               HorizontalTextAlignment="Center" />

        <Button Text="Start Game"
                Clicked="OnStartGameClicked"
                x:Name="StartGameButton" />
    </VerticalStackLayout>
</ContentPage>
