<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:MauiApp2.TruthOrDrink"
       x:Class="MauiApp2.AppShell"
       Shell.BackgroundColor="#27233A"
       Shell.TitleColor="White"
       Shell.ForegroundColor="White"
       Shell.DisabledColor="Gray"
       Shell.UnselectedColor="White"
       Shell.TabBarBackgroundColor="#27233A"
       Shell.TabBarForegroundColor="White">

    <!-- Define the Shell Content -->
    <ShellContent Title="Truth or Drink"
                  ContentTemplate="{DataTemplate local:GamePage}"
                  Route="GamePage" />
</Shell>
