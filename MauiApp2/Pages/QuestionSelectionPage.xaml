<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.TruthOrDrink.QuestionSelectionPage"
             Title="Select Questions"
             BackgroundColor="#9966FF"
             Shell.BackgroundColor="#27233A">

    <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="CenterAndExpand">
        <Label Text="Choose a Question Category"
               FontSize="24"
               HorizontalTextAlignment="Center" />

        <Button Text="Embarrassing Questions"
                Clicked="OnCategorySelected"
                CommandParameter="EmbarrassingQuestions" />

        <Button Text="Personal Secrets"
                Clicked="OnCategorySelected"
                CommandParameter="PersonalSecrets" />

        <Button Text="Fun and Lighthearted"
                Clicked="OnCategorySelected"
                CommandParameter="FunQuestions" />
    </VerticalStackLayout>
</ContentPage>
